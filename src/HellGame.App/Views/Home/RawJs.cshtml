@model RawJsImplementationViewModel

@{
    ViewData["Title"] = "Raw JS";
}

@section Styles {
    <link rel="stylesheet" href="~/css/app/rawJs/styles.css" />
}

@section Scripts {
    <script src="~/js/app/rawJs/main.js" type="module"></script>
}

<input type="hidden" id="gConfig" value="@Model.Config">
<input type="hidden" id="gSessionId" value="@Model.SessionId" />

<div class="text-center">
    <div class="container">
        <div id="divGameControls" class="card m-sm-1">
            <h5 class="card-header">Controls:</h5>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="form-group">
                        <button class="btn btn-primary" id="btnRestart">(Re)Start</button>
                        <button class="btn btn-primary" id="btnSave">Save</button>
                        <button class="btn btn-primary" id="btnLoad">Load</button>
                        <button class="btn btn-primary" id="btnExit">Exit</button>
                    </div>
                    <div>
                        <label id="lblStatus">OK</label>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" id="btnLocaleRu">Ru</button>
                        <button class="btn btn-primary" id="btnLocaleEn">En</button>
                    </div>
                </div>
            </div>
        </div>

        <div id="divGameText" class="card m-sm-1">
            <h5 class="card-header">Game text:</h5>
            <div class="card-body text-justify">
            </div>
        </div>

        <div id="divGameImage" class="card m-sm-1">
            <h5 class="card-header">Game image:</h5>
            <div class="card-body">
                <img id="imgStateImage" />
            </div>
        </div>

        <div id="divGameVars" class="card m-sm-1">
            <h5 class="card-header">Game vars:</h5>
            <div class="card-body">
                <table class="table table-sm table-striped">
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>


        <div id="divGameTransitions" class="card m-sm-1">
            <h5 class="card-header">State transitions:</h5>
            <div class="card-body text-justify">
                <div id="listStateTransitions" class="list-group">
                    <button class="list-group-item list-group-item-action">transition 1</button>
                    <button class="list-group-item list-group-item-action">transition 2</button>
                    <button class="list-group-item list-group-item-action">transition 3</button>
                </div>
            </div>
        </div>
    </div>
</div>

