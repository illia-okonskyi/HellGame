{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "HellEngine": {
    "ScriptHost": {
    },
    "Assets": {
      "AssetsDir": "assets",
      "VarValueSpanClass": "var-value"
    },
    "LocaleManager": {
      "StartingLocale": "ru-ru"
    },
    "Encoding": {
      "StringEncoder": {
        "EncodingName": "UTF-8"
      },
      "Base64Encoder": {
      }
    },
    "VarsManager": {
      "UserNameVarKey": "common.userName",
      "UserNameVarNameAssetKey": "common.vars.userName"
    },
    "StateMachine": {
      "InitialStateKey": "common.state.initial",
      "FinalStateKey": "common.state.final"
    }
  }
}
