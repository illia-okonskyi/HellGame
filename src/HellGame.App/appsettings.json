{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "HellEngine": {
    "HelloWorlder": {
      "HelloString": "Configurable Hello, World!"
    },
    "ScriptHost": {
      "UnsafeMode": true
    },
    "AssetsManager": {
      "AssetsDir": "assets",
      "StartingLocale": "Default"
    },
    "Encoding": {
      "StringEncoder": {
        "EncodingName": "UTF-8"
      },
      "Base64Encoder": {
      }
    }
  }
}
